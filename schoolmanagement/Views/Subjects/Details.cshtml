@model schoolmanagement.Models.Subject

@{
    ViewData["Title"] = "Subject Details";
}

<div class="container py-5">
    <div class="card shadow-lg rounded-3 border-0 p-4">
        <h1 class="card-title text-center mb-4 fw-bold text-primary">@ViewData["Title"]</h1>
        <hr class="mb-4">

        <h4 class="text-center mb-4">Subject: @Model.Name</h4>

        <dl class="row justify-content-center">
            <dt class = "col-sm-3 text-end">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class = "col-sm-7">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>

        <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
            @* Only show Edit and Delete links if the user is Admin *@
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Edit" asp-route-id="@Model?.SubjectId" class="btn btn-primary rounded-pill px-4 py-2 me-md-2">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model?.SubjectId" class="btn btn-danger rounded-pill px-4 py-2 me-md-2">Delete</a>
            }
            <a asp-action="Index" class="btn btn-secondary rounded-pill px-4 py-2">Back to List</a>
        </div>
    </div>
</div>
