@* Add this line at the very top to disable the default layout for this page *@
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>School Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" xintegrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body {
            font-family: 'Inter', sans-serif; /* Keep Inter font for consistency */
            background-color: #f8f9fa; /* Bootstrap's light gray background */
            color: #212529; /* Bootstrap's default text color */
        }
        /* Custom colors for Bootstrap if default ones don't match previous intent */
        /* Primary (Indigo-like) */
        .bg-primary-custom { background-color: #4f46e5 !important; } /* A strong indigo */
        .text-primary-custom { color: #4f46e5 !important; }
        .btn-primary-custom {
            background-color: #4f46e5;
            border-color: #4f46e5;
            color: #fff;
        }
        .btn-primary-custom:hover {
            background-color: #4338ca;
            border-color: #4338ca;
        }

        /* Secondary (Purple-like) for gradient */
        .bg-gradient-custom {
            background: linear-gradient(to right, #4f46e5, #8b5cf6); /* Indigo to Purple */
        }

        /* Feature icons (using Bootstrap's text utilities, or custom if needed) */
        .icon-student { color: #6366f1; } /* Indigo */
        .icon-teacher { color: #22c55e; } /* Green */
        .icon-class { color: #3b82f6; }  /* Blue */

        /* Custom transition for hover effects */
        .transition {
            transition: all 0.3s ease-in-out;
        }
        .hover-scale-105:hover {
            transform: scale(1.05);
        }
        .hover-shadow-lg:hover {
            box-shadow: 0 1rem 3rem rgba(0,0,0,.175)!important; /* Bootstrap's shadow-lg value */
        }
        .hover-translate-y-n2:hover {
            transform: translateY(-0.5rem); /* Equivalent to -0.5rem */
        }
        .hover-bg-light:hover {
            background-color: var(--bs-light) !important; /* Use Bootstrap variable for consistency */
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm rounded-bottom">
        <div class="container-fluid container-md">
            <a class="navbar-brand text-primary-custom fw-bold fs-4 p-2 rounded hover-bg-light transition" href="#">SchoolApp</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link text-dark-emphasis px-3 py-2 rounded hover-bg-light transition" href="/Students">Students</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark-emphasis px-3 py-2 rounded hover-bg-light transition" href="/Teachers">Teachers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark-emphasis px-3 py-2 rounded hover-bg-light transition" href="/Classes">Classes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark-emphasis px-3 py-2 rounded hover-bg-light transition" href="#">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark-emphasis px-3 py-2 rounded hover-bg-light transition" href="#">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <header class="bg-gradient-custom text-white py-5 py-md-5 text-center shadow rounded-bottom">
        <div class="container">
            <h1 class="display-4 fw-bold mb-3">
                Welcome to Your School Management System
            </h1>
            <p class="fs-5 mb-4 opacity-75">
                Streamline academic operations, connect students, teachers, and classes effortlessly.
            </p>
            <a href="/Students/Create" class="btn btn-light btn-lg rounded-pill shadow-lg hover-scale-105 transition">
                Get Started
            </a>
        </div>
    </header>

    <section class="py-5 py-md-5 px-3">
        <div class="container">
            <h2 class="text-center mb-5 fw-bold text-primary-custom">Key Features</h2>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                <div class="col">
                    <a href="/Students" class="text-decoration-none text-reset d-block h-100"> @* Added link wrapper for Student Management *@
                        <div class="card h-100 shadow-sm border-0 rounded-lg transition hover-shadow-lg hover-translate-y-n2">
                            <div class="card-body p-4 text-center">
                                <div class="icon-student mb-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                                        <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                                    </svg>
                                </div>
                                <h3 class="card-title fs-5 fw-bold mb-3 text-dark">Student Management</h3>
                                <p class="card-text text-muted">
                                    Efficiently manage student records, personal details, and academic progress with ease.
                                </p>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col">
                    <a href="/Teachers" class="text-decoration-none text-reset d-block h-100"> @* Added link wrapper for Teacher Profiles *@
                        <div class="card h-100 shadow-sm border-0 rounded-lg transition hover-shadow-lg hover-translate-y-n2">
                            <div class="card-body p-4 text-center">
                                <div class="icon-teacher mb-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-person-badge-fill" viewBox="0 0 16 16">
                                        <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2zm4.5 0a.5.5 0 0 0 0 1h3a.5.5 0 0 0 0-1h-3zM8 11a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm5 2.755C12.146 12.825 10.51 12 8 12s-4.146.824-5 1.755V14a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1v-.245z"/>
                                    </svg>
                                </div>
                                <h3 class="card-title fs-5 fw-bold mb-3 text-dark">Teacher Profiles</h3>
                                <p class="card-text text-muted">
                                    Keep track of teacher information, subject expertise, and assigned classes.
                                </p>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col">
                    <a href="/Classes" class="text-decoration-none text-reset d-block h-100"> @* Added link wrapper for Class Organization *@
                        <div class="card h-100 shadow-sm border-0 rounded-lg transition hover-shadow-lg hover-translate-y-n2">
                            <div class="card-body p-4 text-center">
                                <div class="icon-class mb-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-book-fill" viewBox="0 0 16 16">
                                        <path d="M8 1.783C7.015.936 5.587.81 4.287 1.4.588 3.397-.272 7.002 2.223 9.201c.388.336.844.621 1.38.835.7.291 1.456.417 2.187.417.927 0 1.948-.38 2.981-1.39H9c.677 0 1.258-.234 1.734-.658.175-.15.417-.354.654-.57l-.003.002c.003-.002.004-.003.004-.003a6.023 6.023 0 0 0 2.456-1.743c.119-.102.253-.217.387-.336.567-.499 1.162-1.254 1.162-3.154 0-1.072-.328-2.077-1.058-2.798C12.98 2.645 11.272 2 8 2z"/>
                                    </svg>
                                </div>
                                <h3 class="card-title fs-5 fw-bold mb-3 text-dark">Class Organization</h3>
                                <p class="card-text text-muted">
                                    Effortlessly organize students into classes and streamline timetables.
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <section class="bg-primary-custom text-white py-5 text-center rounded-top shadow-sm">
        <div class="container">
            <h2 class="fs-2 fw-bold mb-3">Ready to Get Started?</h2>
            <p class="fs-5 opacity-75 mb-4">
                Join our platform today and simplify your school's administration.
            </p>
            <a href="/Students/Create" class="btn btn-light btn-lg rounded-pill shadow-lg hover-scale-105 transition">
                Create First Student
            </a>
        </div>
    </section>

    <footer class="bg-dark text-white-50 py-3 rounded-top">
        <div class="container text-center small">
            &copy; 2024 SchoolApp. All rights reserved.
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" xintegrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script>
        // Custom transitions (removed specific animations for simplicity as requested,
        // but can add back with custom CSS if desired)
        document.addEventListener('DOMContentLoaded', () => {
            const elements = document.querySelectorAll('.transition');
            elements.forEach(el => {
                el.style.transition = 'all 0.3s ease-in-out';
            });

            // Hover effects (example for scale)
            document.querySelectorAll('.hover-scale-105').forEach(el => {
                el.onmouseover = () => el.style.transform = 'scale(1.05)';
                el.onmouseout = () => el.style.transform = 'scale(1)';
            });

            // Hover effects (example for shadow)
            document.querySelectorAll('.hover-shadow-lg').forEach(el => {
                el.onmouseover = () => el.classList.add('shadow-lg');
                el.onmouseout = () => el.classList.remove('shadow-lg');
            });

            // Hover effects (example for translate)
            document.querySelectorAll('.hover-translate-y-n2').forEach(el => {
                el.onmouseover = () => el.style.transform = 'translateY(-0.5rem)';
                el.onmouseout = () => el.style.transform = 'translateY(0)';
            });

            // Hover effect for nav links
            document.querySelectorAll('.hover-bg-light').forEach(el => {
                el.onmouseover = () => el.classList.add('bg-light');
                el.onmouseout = () => el.classList.remove('bg-light');
            });
        });
    </script>
</body>
</html>
