@model schoolmanagement.Models.Auth.ApplicationUser

@{
    ViewData["Title"] = "Delete User";
}

<div class="container py-5">
    <div class="card shadow-lg rounded-3 border-0 p-4">
        <h1 class="card-title text-center mb-4 fw-bold text-danger">@ViewData["Title"]</h1>
        <hr class="mb-4">
        <h3 class="text-center mb-4">Are you sure you want to delete this user?</h3>

        <dl class="row justify-content-center">
            <dt class="col-sm-3 text-end">
                User Email:
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Email)
            </dd>
        </dl>

        <form asp-action="DeleteUser" asp-controller="Admin" method="post">
            <input type="hidden" asp-for="Id" /> @* Hidden field for User Id *@
            <div asp-validation-summary="All" class="text-danger text-center mb-3"></div> @* Display potential errors here *@

            <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                <button type="submit" class="btn btn-danger btn-lg rounded-pill px-4 py-2 me-md-2 fw-bold">Confirm Delete</button>
                <a asp-action="ManageUsers" class="btn btn-secondary btn-lg rounded-pill px-4 py-2">Cancel</a>
            </div>
        </form>
    </div>
</div>
