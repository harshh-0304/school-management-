@model schoolmanagement.ViewModels.AdminDashboardViewModel 

@{
    ViewData["Title"] = "Admin Dashboard"; // Matches the ViewData["Title"] in the controller
}

<div class="container py-5">
    <div class="card shadow-lg rounded-4 border-0 p-4 p-md-5">
        <h1 class="card-title text-center mb-4 fw-bold text-primary display-4">
            <i class="bi bi-person-gear me-3"></i> @ViewData["Title"]
        </h1>
        <hr class="mb-5 border-primary border-3 opacity-75 mx-auto" style="width: 100px;">
        <p class="lead text-center mb-5 text-muted">
            Welcome to your central command center. Efficiently manage users, roles, and gain insights into your school's operations.
        </p>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4 mb-5">
            <div class="col">
                <div class="card h-100 shadow-sm border-0 rounded-4 transition hover-shadow-lg hover-translate-y-n2 text-center bg-light">
                    <div class="card-body p-4">
                        <div class="mb-3 text-primary">
                            <i class="bi bi-person-fill" style="font-size: 3rem;"></i>
                        </div>
                        <h3 class="card-title fs-4 fw-bold mb-2">Total Students</h3>
                        <p class="card-text display-5 fw-bold text-primary">@Model.TotalStudents</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100 shadow-sm border-0 rounded-4 transition hover-shadow-lg hover-translate-y-n2 text-center bg-light">
                    <div class="card-body p-4">
                        <div class="mb-3 text-success">
                            <i class="bi bi-person-badge-fill" style="font-size: 3rem;"></i>
                        </div>
                        <h3 class="card-title fs-4 fw-bold mb-2">Total Teachers</h3>
                        <p class="card-text display-5 fw-bold text-success">@Model.TotalTeachers</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100 shadow-sm border-0 rounded-4 transition hover-shadow-lg hover-translate-y-n2 text-center bg-light">
                    <div class="card-body p-4">
                        <div class="mb-3 text-info">
                            <i class="bi bi-book-fill" style="font-size: 3rem;"></i>
                        </div>
                        <h3 class="card-title fs-4 fw-bold mb-2">Total Classes</h3>
                        <p class="card-text display-5 fw-bold text-info">@Model.TotalClasses</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100 shadow-sm border-0 rounded-4 transition hover-shadow-lg hover-translate-y-n2 text-center bg-light">
                    <div class="card-body p-4">
                        <div class="mb-3 text-warning">
                            <i class="bi bi-journal-text" style="font-size: 3rem;"></i>
                        </div>
                        <h3 class="card-title fs-4 fw-bold mb-2">Total Subjects</h3>
                        <p class="card-text display-5 fw-bold text-warning">@Model.TotalSubjects</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row row-cols-1 row-cols-md-2 g-4">
            <div class="col">
                <a asp-controller="Admin" asp-action="ManageUsers" class="text-decoration-none d-block h-100">
                    <div class="card h-100 shadow-sm border-0 rounded-4 transition hover-shadow-lg hover-translate-y-n2">
                        <div class="card-body p-4 text-center">
                            <div class="mb-3 text-info">
                                <i class="bi bi-people-fill" style="font-size: 3rem;"></i> <!-- Bootstrap Icon -->
                            </div>
                            <h3 class="card-title fs-4 fw-bold mb-3 text-dark">User Management</h3>
                            <p class="card-text text-muted">
                                Oversee all user accounts, assign roles, and manage access permissions effortlessly.
                            </p>
                            <button class="btn btn-outline-info rounded-pill mt-3 px-4 py-2 fw-bold">Manage Users</button>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col">
                <div class="card h-100 shadow-sm border-0 rounded-4 transition hover-shadow-lg hover-translate-y-n2">
                    <div class="card-body p-4 text-center">
                        <div class="mb-3 text-success">
                            <i class="bi bi-bar-chart-fill" style="font-size: 3rem;"></i> <!-- Bootstrap Icon -->
                        </div>
                        <h3 class="card-title fs-4 fw-bold mb-3 text-dark">System Overview</h3>
                        <p class="card-text text-muted">
                            Access key performance indicators and comprehensive reports on system activities.
                        </p>
                        <button class="btn btn-outline-success rounded-pill mt-3 px-4 py-2 fw-bold disabled">View System Stats (Coming Soon)</button>
                    </div>
                </div>
            </div>
            @* Add more admin-specific widgets or links here *@
        </div>

        <div class="text-center mt-5">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary rounded-pill px-4 py-2">Back to Homepage</a>
        </div>
    </div>
</div>

@section Scripts {
    <!-- If you have custom JS for hover effects or other dashboard interactivity -->
    <script>
        // Example hover effects from homepage_ui, ensure these are loaded globally or included here
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.transition').forEach(el => {
                el.style.transition = 'all 0.3s ease-in-out';
            });
            document.querySelectorAll('.hover-shadow-lg').forEach(el => {
                el.onmouseover = () => el.classList.add('shadow-lg');
                el.onmouseout = () => el.classList.remove('shadow-lg');
            });
            document.querySelectorAll('.hover-translate-y-n2').forEach(el => {
                el.onmouseover = () => el.style.transform = 'translateY(-0.5rem)';
                el.onmouseout = () => el.style.transform = 'translateY(0)';
            });
        });
    </script>
}
