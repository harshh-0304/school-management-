    @{
        ViewData["Title"] = "Admin Dashboard"; // Matches the ViewData["Title"] in the controller
    }

    <div class="container py-5">
        <div class="card shadow-lg rounded-3 border-0 p-4">
            <h1 class="text-center mb-4 fw-bold text-primary">@ViewData["Title"]</h1>
            <hr class="mb-4">
            <p class="lead text-center">Welcome to your Admin Dashboard! From here, you can manage users, roles, and other system-wide settings.</p>

            <div class="row mt-4">
                <div class="col-md-6 mb-3">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <h5 class="card-title text-info">User Management</h5>
                            <p class="card-text">View, create, edit, and assign roles to users.</p>
                            <a asp-controller="Admin" asp-action="ManageUsers" class="btn btn-outline-info rounded-pill">Go to User Management</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <h5 class="card-title text-success">System Overview</h5>
                            <p class="card-text">Get insights into system activities and performance.</p>
                            <a href="#" class="btn btn-outline-success rounded-pill disabled">View System Stats (Coming Soon)</a>
                        </div>
                    </div>
                </div>
            </div>
            @* Add more admin-specific widgets or links here *@
        </div>
    </div>
    