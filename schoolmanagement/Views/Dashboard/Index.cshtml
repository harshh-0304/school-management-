@{
    ViewData["Title"] = "Dashboard";
}

<h1 class="text-primary-custom mb-4">Welcome to Your Dashboard!</h1>

<div class="row g-4 mb-5">
    <div class="col-md-6 col-lg-3">
        <div class="card shadow-sm rounded-lg text-center p-3 hover-shadow-lg transition">
            <div class="card-body">
                <h5 class="card-title text-muted">Total Students</h5>
                <p class="display-4 fw-bold text-primary-custom">@ViewBag.TotalStudents</p>
                <a href="/Students" class="btn btn-outline-primary btn-sm rounded-pill">View All</a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card shadow-sm rounded-lg text-center p-3 hover-shadow-lg transition">
            <div class="card-body">
                <h5 class="card-title text-muted">Total Teachers</h5>
                <p class="display-4 fw-bold text-success">@ViewBag.TotalTeachers</p>
                <a href="/Teachers" class="btn btn-outline-success btn-sm rounded-pill">View All</a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card shadow-sm rounded-lg text-center p-3 hover-shadow-lg transition">
            <div class="card-body">
                <h5 class="card-title text-muted">Total Classes</h5>
                <p class="display-4 fw-bold text-info">@ViewBag.TotalClasses</p>
                <a href="/Classes" class="btn btn-outline-info btn-sm rounded-pill">View All</a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card shadow-sm rounded-lg text-center p-3 hover-shadow-lg transition">
            <div class="card-body">
                <h5 class="card-title text-muted">Total Subjects</h5>
                <p class="display-4 fw-bold text-warning">@ViewBag.TotalSubjects</p>
                <a href="/Subjects" class="btn btn-outline-warning btn-sm rounded-pill">View All</a>
            </div>
        </div>
    </div>
</div>

<h2 class="text-primary-custom mb-4">Recent Activity</h2>

<div class="row g-4">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm rounded-lg p-3 h-100">
            <div class="card-body">
                <h5 class="card-title text-primary-custom mb-3">Latest Students</h5>
                @if (ViewBag.RecentStudents != null && ViewBag.RecentStudents.Count > 0)
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var student in ViewBag.RecentStudents)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @student.Name @* Assuming 'Name' property exists on Student model *@
                                <a href="/Students/Details/@student.Id" class="btn btn-sm btn-outline-secondary rounded-pill">View</a>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">No students added recently.</p>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm rounded-lg p-3 h-100">
            <div class="card-body">
                <h5 class="card-title text-success mb-3">Latest Teachers</h5>
                @if (ViewBag.RecentTeachers != null && ViewBag.RecentTeachers.Count > 0)
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var teacher in ViewBag.RecentTeachers)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @teacher.Name @* Assuming 'Name' property exists on Teacher model *@
                                <a href="/Teachers/Details/@teacher.Id" class="btn btn-sm btn-outline-secondary rounded-pill">View</a>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">No teachers added recently.</p>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm rounded-lg p-3 h-100">
            <div class="card-body">
                <h5 class="card-title text-info mb-3">Latest Classes</h5>
                @if (ViewBag.RecentClasses != null && ViewBag.RecentClasses.Count > 0)
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var classItem in ViewBag.RecentClasses)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @classItem.Name @* Assuming 'Name' property exists on Class model *@
                                <a href="/Classes/Details/@classItem.ClassId" class="btn btn-sm btn-outline-secondary rounded-pill">View</a> @* <--- CHANGED TO @classItem.ClassId *@
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">No classes added recently.</p>
                }
            </div>
        </div>
    </div>
</div>